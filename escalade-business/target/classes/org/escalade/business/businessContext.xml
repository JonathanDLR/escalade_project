<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">
            
	<bean id="commentaireManager" class="org.escalade.business.impl.manager.CommentaireManagerImpl">
		<property name="daoFactory" ref="daoFactory" />
	</bean>
	<bean id="reservationManager" class="org.escalade.business.impl.manager.ReservationManagerImpl">
		<property name="daoFactory" ref="daoFactory" />
	</bean>
	<bean id="siteManager" class="org.escalade.business.impl.manager.SiteManagerImpl">
		<property name="daoFactory" ref="daoFactory" />
	</bean>
	<bean id="topoManager" class="org.escalade.business.impl.manager.TopoManagerImpl">
		<property name="daoFactory" ref="daoFactory" />
	</bean>
	<bean id="userManager" class="org.escalade.business.impl.manager.UserManagerImpl">
		<property name="daoFactory" ref="daoFactory" />
	</bean>
	
	<bean id="managerFactory" class="org.escalade.business.impl.manager.ManagerFactoryImpl">
		<property name="commentaireManager" ref="commentaireManager" />
		<property name="reservationManager" ref="reservationManager" />
		<property name="siteManager" ref="siteManager" />
		<property name="topoManager" ref="topoManager" />
		<property name="userManager" ref="userManager" />
	</bean>
	
		
	<bean id="txManagerTicket" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourceTicket" />
	</bean>
	<bean id="txManagerProjet" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourceTicket" />
	</bean>
	
	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.escalade.business.impl.manager.AbstractManager" />
		<property name="targetMethod" value="setDaoFactory" />
		<property name="arguments" ref="daoFactory" />
	</bean>
</beans>
	